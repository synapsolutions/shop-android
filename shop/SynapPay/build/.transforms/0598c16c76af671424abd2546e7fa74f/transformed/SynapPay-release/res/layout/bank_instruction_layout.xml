<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="500dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/mainView"
            android:layout_width="320dp"
            android:layout_height="500dp"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/Header"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:background="#FFFFFF"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/lineHeader"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:background="#0055AD" />

                        <ImageView
                            android:id="@+id/imageProcessor"
                            android:layout_width="165dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:translationY="5dp"
                            app:srcCompat="@drawable/synap_kashio" />

                        <TextView
                            android:id="@+id/labelHeader"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1"
                            android:gravity="center|center_horizontal"
                            android:text="[labelHeader]"
                            android:textColor="#282828"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/PaymentInformation"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:background="#FFFFFF"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="#F1F1F1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/labelPaymentCode"
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="[labelCode]"
                                android:textColor="#282828"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/paymentCode"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_marginTop="-15dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="[code]"
                                android:textColor="#282828"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:background="#F1F1F1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/labelPaymentAmount"
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="[labelAmount]"
                                android:textColor="#282828"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/paymentAmount"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_marginTop="-15dp"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="[amount]"
                                android:textColor="#282828"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ExpiryInformation"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="#FFFFFF"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/labelExpiration"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="[expire]"
                            android:textColor="#282828"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Banks"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="#FFFFFF"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/lineDivider1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="#F1F1F1" />

                        <TextView
                            android:id="@+id/labelBank"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Puedes pagar en"
                            android:textColor="#282828"
                            android:textSize="11sp" />

                        <ImageView
                            android:id="@+id/imageProcessorBanks"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/synap_kashio_banks" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Share"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="#FFFFFF"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/buttonShare"
                            android:layout_width="180dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/kashio_round_button"
                            android:layout_gravity="center"
                            android:text="Compartir Código"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Instructions"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="#FFFFFF"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/lineDivider2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="#F1F1F1" />

                        <TextView
                            android:id="@+id/instructionInformation"
                            android:layout_width="300dp"
                            android:layout_height="125dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:gravity="start|top"
                            android:inputType="textMultiLine"
                            android:text="Pago vía Banca Móvil y Web\n\n 1. Ingresa a tu Banca Móvil o Web.\n 2. Selecciona la opción \'Pagar Servicio\'.\n 3. Busca la institución ó empresa \'Kashio Peru\' y selecciona \'Kashio Peru Soles\'.\n 4. Ingresa tu Código de Pago, selecciona la deuda a pagar, confirma y ¡Listo!\n;"
                            android:textColor="#282828"
                            android:textSize="11sp" />

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>